{
  "name": "passkey-authentication-system",
  "version": "1.0.0",
  "description": "Secure Passkey-Based Authentication System with Risk-Based Access Control",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "vite",
    "build": "vite build",
    "postinstall": "npm run build",
    "init-db": "node server/database/init.js",
    "start": "NODE_ENV=production node server/server.js"
  },
  "keywords": ["passkey", "webauthn", "authentication", "security"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@simplewebauthn/server": "^10.0.1",
    "@simplewebauthn/browser": "^10.0.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express-session": "^1.18.1",
    "geoip-lite": "^1.4.10",
    "nodemailer": "^6.9.16",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "vite": "^6.0.7",
    "nodemon": "^3.1.9",
    "concurrently": "^9.1.2"
  }
}
